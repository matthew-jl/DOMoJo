<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="edu.bluejack24_2.domojo.viewmodels.LandingViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/main_landing_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        tools:context=".views.ui.LandingActivity">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="App Logo"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/landing_tagline"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_carousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@android:color/transparent"
            app:tabBackground="@drawable/tab_indicator_selector"
            app:tabGravity="center"
            app:tabIndicator="@null"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabMode="scrollable"
            app:tabPaddingTop="0dp"
            app:tabPaddingBottom="0dp"
            app:tabMaxWidth="12dp"
            app:tabRippleColor="@null"
            />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/login"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/color4"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/register"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color4"
            android:backgroundTint="@android:color/transparent"
            android:strokeColor="@color/color4"
            style="?attr/materialButtonOutlinedStyle"/>

    <TextView
        android:id="@+id/profile_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="12dp"
        android:text="Profile"
        android:textColor="@color/color2"
        android:textSize="16sp" />

    </LinearLayout>
</layout>