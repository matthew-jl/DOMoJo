<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="edu.bluejack24_2.domojo.viewmodels.ChallengeDetailViewModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="@{viewModel.challengeDetails.isJoined &amp;&amp; viewModel.usersTodayPost != null ? View.VISIBLE : View.GONE}"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:text="@string/my_post"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <include
                android:id="@+id/users_today_post_item"
                layout="@layout/item_post"
                app:post="@{viewModel.usersTodayPost}"
                app:user="@{viewModel.usersTodayPostUser}" />

        </LinearLayout>

        <TextView
            android:id="@+id/no_post_today_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:text="@string/no_posts_today"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="@{viewModel.challengeDetails.isJoined &amp;&amp; viewModel.usersTodayPost == null ? View.VISIBLE : View.GONE}"
            tools:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/other_user_posts"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/challenge_posts_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_post" />

        <TextView
            android:id="@+id/no_posts_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_challenge_posts"
            android:textColor="@color/color5"
            android:visibility="@{viewModel.posts.empty &amp;&amp; !viewModel.isLoading &amp;&amp; viewModel.usersTodayPost == null ? View.VISIBLE : View.GONE}"
            tools:visibility="gone" />

    </LinearLayout>
</layout>