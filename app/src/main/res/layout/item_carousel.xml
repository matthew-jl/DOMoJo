<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="carouselItem"
            type="edu.bluejack24_2.domojo.models.CarouselItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/carousel_image"
            imageUrl="@{carouselItem.imageUrl}"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="Carousel Image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/carousel_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="@{carouselItem.heading}"
            android:textColor="@color/color5"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="Heading Text" />

        <TextView
            android:id="@+id/carousel_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@{carouselItem.description}"
            android:textColor="@color/color4"
            android:textSize="14sp"
            tools:text="Description Text" />

    </LinearLayout>
</layout>