<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="carouselItem"
            type="edu.bluejack24_2.domojo.models.CarouselItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/carousel_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            imageUrl="@{carouselItem.imageUrl}"
            android:contentDescription="Carousel Image" />

        <TextView
            android:id="@+id/carousel_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{carouselItem.heading}"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimaryContainer"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            tools:text="Heading Text"/>

        <TextView
            android:id="@+id/carousel_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{carouselItem.description}"
            android:textSize="14sp"
            android:textColor="?attr/colorSecondary"
            android:gravity="center_horizontal"
            tools:text="Description Text"
            android:paddingHorizontal="16dp"/>

    </LinearLayout>
</layout>