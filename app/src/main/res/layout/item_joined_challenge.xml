<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="joinedChallenge"
            type="edu.bluejack24_2.domojo.models.JoinedChallengeDisplay" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/color3"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/challenge_icon_image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                app:imageUrl="@{joinedChallenge.challenge.iconUrl}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/challenge_icon_placeholder"
                tools:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/challenge_title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{joinedChallenge.challenge.title}"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/streak_status_icon"
                app:layout_constraintStart_toEndOf="@id/challenge_icon_image_view"
                app:layout_constraintTop_toTopOf="@id/challenge_icon_image_view"
                tools:text="@string/default_challenge_title" />

            <TextView
                android:id="@+id/challenge_category_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="@{joinedChallenge.challenge.category}"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/streak_status_icon"
                app:layout_constraintStart_toEndOf="@id/challenge_icon_image_view"
                app:layout_constraintTop_toBottomOf="@id/challenge_title_text_view"
                tools:text="Category: Fitness" />

            <ImageView
                android:id="@+id/streak_status_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Streak Status"
                android:src="@{joinedChallenge.hasPostedToday ? @drawable/ic_check : @drawable/ic_close}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/challenge_title_text_view"
                app:layout_constraintBottom_toBottomOf="@id/challenge_category_text_view"
                tools:src="@drawable/ic_check" />

            <LinearLayout
                android:id="@+id/streak_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_icon_image_view">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/fire_icon_desc"
                    android:src="@drawable/fire_icon" />

                <TextView
                    android:id="@+id/streak_count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{String.valueOf(joinedChallenge.member.currentStreak)}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Current Streak: 7" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>