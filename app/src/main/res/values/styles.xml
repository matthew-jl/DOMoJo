<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AboutUsButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/color3</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Theme.MaterialComponents.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">@color/color3</item>
        <item name="thumbTint">@color/color4</item>
    </style>
</resources>